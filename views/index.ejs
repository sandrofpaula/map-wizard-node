<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mapas</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Mapas</h1>
        <% if (!google_api_key || google_api_key === "YOUR_GOOGLE_API_KEY") { %>
            <div class="alert alert-warning" role="alert">
                Por favor, insira a Google API Key para usar os recursos do mapa.
            </div>
        <% } %>
        <p>
            <a href="/create" class="btn btn-success">Criar mapa</a>
            <a href="/editApiKey" class="btn btn-primary">Editar Google API Key</a>
        </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th><input type="text" id="searchId" class="form-control" placeholder="Pesquisar ID"></th>
                    <th><input type="text" id="searchNome" class="form-control" placeholder="Pesquisar Nome"></th>
                    <th><input type="text" id="searchEndereco" class="form-control" placeholder="Pesquisar Endereço"></th>
                    <th><input type="text" id="searchLocalizacao" class="form-control" placeholder="Pesquisar Localização"></th>
                    <th>Ações</th>
                </tr>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Endereço</th>
                    <th>Localização</th>
                    <th style="width: 140px;">Ações</th>
                </tr>
            </thead>
            <tbody id="mapasTableBody">
                <% mapas.forEach(mapa => { %>
                <tr>
                    <td><%= mapa.id %></td>
                    <td><%= mapa.nome %></td>
                    <td><%= mapa.endereco %></td>
                    <td><%= mapa.localizacao %></td>
                    <td>
                        <a href="/view/<%= mapa.id %>" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i></a>
                        <a href="/edit/<%= mapa.id %>" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i></a>
                        <a href="/delete/<%= mapa.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este item?');">
                            <i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchId = document.getElementById('searchId');
            const searchNome = document.getElementById('searchNome');
            const searchEndereco = document.getElementById('searchEndereco');
            const searchLocalizacao = document.getElementById('searchLocalizacao');
            const tableBody = document.getElementById('mapasTableBody');
            const rows = tableBody.getElementsByTagName('tr');

            function normalize(text) {
                return text.normalize('NFD').replace(/[\u0300-\u036f]/g, '').toLowerCase();
            }

            function filterTable() {
                const idValue = normalize(searchId.value);
                const nomeValue = normalize(searchNome.value);
                const enderecoValue = normalize(searchEndereco.value);
                const localizacaoValue = normalize(searchLocalizacao.value);

                for (let i = 0; i < rows.length; i++) {
                    const cells = rows[i].getElementsByTagName('td');
                    const id = normalize(cells[0].textContent);
                    const nome = normalize(cells[1].textContent);
                    const endereco = normalize(cells[2].textContent);
                    const localizacao = normalize(cells[3].textContent);

                    rows[i].style.display = 
                        (id.includes(idValue) && 
                        nome.includes(nomeValue) && 
                        endereco.includes(enderecoValue) && 
                        localizacao.includes(localizacaoValue)) ? '' : 'none';
                }
            }

            searchId.addEventListener('input', filterTable);
            searchNome.addEventListener('input', filterTable);
            searchEndereco.addEventListener('input', filterTable);
            searchLocalizacao.addEventListener('input', filterTable);
        });
    </script>
</body>
</html>
