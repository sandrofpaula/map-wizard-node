<form method="POST" action="<%= actionUrl %>">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= mapa ? mapa.nome : '' %>" required>
    </div>
    <div class="form-group">
        <label for="endereco">Endereço</label>
        <input type="text" class="form-control" id="endereco" name="endereco" value="<%= mapa ? mapa.endereco : '' %>" required>
    </div>
    <div class="form-group">
        <label for="localizacao">Localização</label>
        <input type="text" class="form-control" id="localizacao" name="localizacao" value="<%= mapa ? mapa.localizacao : '' %>" required>
    </div>
    <button type="submit" class="btn btn-success"><%= buttonText %></button>
    <a href="/" class="btn btn-secondary">Cancelar</a>
</form>
